{
    "env": {
        "browser": false,
        "mocha":true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "valid-typeof": "warn",
        "constructor-super": "warn",
        "no-undef": "warn",
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
    }
}